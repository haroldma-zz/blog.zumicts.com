{{!< default}}

<header {{#if @blog.cover}} style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="blog-meta">
        <h1>{{@blog.title}}</h1>
        <h2 >{{@blog.description}}</h2>
    </div>
</header>

<main>
    {{#foreach posts}}

    <article class="{{post_class}}">
            <span><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></span>
            <h2><a href="{{url}}">{{{title}}}</a></h2>
        <p>{{excerpt}}&hellip;</p>
    </article>

    {{/foreach}}

    <div class="pagination">{{pagination}}</div> 
</main>