{{!< default}}

<main>
    <div class="post-logo">
        {{#if @blog.logo}}
            <a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo"></a>
        {{else}}
            <h1><a href="{{@blog.url}}">{{@blog.title}}</a></h1></a>
        {{/if}}
    </div>

        {{#post}}

    <article>
        <div class ="post-header">
            <h1>{{{title}}}</h1>
            <span> {{#if tags}}{{tags separator=" | "}}{{/if}}</span> <!-- 'tags' que aparecen debajo del titulo del post -->
        </div>

        <section>
            {{content}}
        </section>

        <footer class="post-footer">

            <!-- Secci贸n con los datos del autor -->
            {{#if author}}
