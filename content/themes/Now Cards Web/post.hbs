                    {{#if author.website}}
                        <h4>Written by <a href="{{author.website}}" target="blank">{{author.name}}</a></h4>
                    {{else}}
                        <h4>by {{author.name}}</h4>
                    {{/if}}
                </section>
            {{/if}}
